{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "wave",
  "version": "0.1.0",
  "identifier": "com.itslhuis.wave",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:4535",
    "beforeDevCommand": "npm run start",
    "beforeBuildCommand": "npm run build:vite"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Wave",
        "width": 1280,
        "height": 720,
        "fullscreen": false,
        "decorations": false,
        "resizable": true,
        "transparent": true,
        "visible": false
      },
      {
        "label": "overlay",
        "url": "overlay.html",
        "width": 280,
        "height": 210,
        "fullscreen": false,
        "decorations": false,
        "resizable": true,
        "transparent": true,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
