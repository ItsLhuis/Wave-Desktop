{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Wave",
  "version": "1.0.0",
  "identifier": "com.itslhuis.wave",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:4535",
    "beforeDevCommand": "npm run start",
    "beforeBuildCommand": "npm run build:vite"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "overlay",
        "title": "Wave",
        "url": "overlay.html",
        "width": 210,
        "height": 210,
        "minWidth": 210,
        "minHeight": 210,
        "fullscreen": false,
        "decorations": false,
        "resizable": true,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "visible": false
      },
      {
        "label": "main",
        "title": "Wave",
        "width": 960,
        "height": 540,
        "minWidth": 720,
        "minHeight": 405,
        "decorations": false,
        "resizable": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
